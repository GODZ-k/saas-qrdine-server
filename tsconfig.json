{
  "compilerOptions": {
    "module": "ESNext",        // Important: This allows TypeScript to output ES Modules
    "target": "ESNext",  
    "rootDir": ".",      // Can also be "ES6" or "ES2020"
    "moduleResolution": "node", // Ensures node-style module resolution
    "esModuleInterop": true,   // Helps with compatibility when importing CJS modules
    "skipLibCheck": true,      // Skips type checking of declaration files (optional)
    "forceConsistentCasingInFileNames": true,  // Ensures consistent file naming
    "outDir": "./dist",        // Output directory for compiled files
    "strict": true,            // Enables strict type checking (optional but recommended)
    "resolveJsonModule": true  // If you're importing JSON files
  },
  "include": ["src/**/*","server.ts" , "app.log" ,"src/**/*.d.ts", "src/utils/.ts"],                 // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}